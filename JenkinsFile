pipeline{
    agent any
    
    tools {nodejs "NodeJS"}
    
    parameters{
        string (name: 'SPEC', defaultValue:"cypress/integration/formularioTest.spec.js",description: "Escolha qual suite de teste executar")
        choice (name: "BROWSER",choices: ['chrome','firefox','edge'],description: "escolha qual browser deseja executar o teste")
    }
    
    
    options{
        ansiColor('xterm')
    }

    stages{
        
        stage("Build"){
            steps{
                sh 'npm install'
            }
        }
        
        stage("Testing"){
            steps{
                sh "npx cypress run --browser ${BROWSER} --spec ${SPEC}"
            }
        }

    }
}
